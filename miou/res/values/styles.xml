<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="custom_theme_color">@color/white</color>
    
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
    </style>
    
    <!-- 按钮 -->
    <style name="button">
        <item name="android:background" >@drawable/button_style</item>
        <item name="android:width">60dp</item>
        <item name="android:height">40dp</item>
    </style>
    
    <!-- 小标题 -->
    <style name="little_title" >
        <item name="android:background" >@color/title_background_gray</item>
        <item name="android:height" >30dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <!-- dingzhongchang add -->
    <style name="Theme.Tab" parent="android:Theme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabIndicator</item>
        <item name="android:textColor">@color/black_text</item>

    </style>

    <style name="Widget.TabIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/TextAppearance.Tab</item>
    </style>

    <style name="TextAppearance.Tab" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">@color/white_theme</item>
    </style>


    <style name="BgLeftButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/radio_text_color</item>
        <item name="android:background">@drawable/half_left</item>
    </style>

    <style name="BgMidButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/radio_text_color</item>
        <item name="android:background">@drawable/half_mid</item>
    </style>

    <style name="BgRightButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/radio_text_color</item>
        <item name="android:background">@drawable/half_right</item>
    </style>

    <style name="BgButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:background">@drawable/normal_btn</item>
    </style>

    <style name="TaskButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:background">@drawable/task_btn</item>
    </style>
</resources>
