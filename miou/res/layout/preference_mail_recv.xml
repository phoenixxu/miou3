<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/fragmentContainer" >

   <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@color/title_background_gray" >
    	
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
	    	<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="任务名称" 
			    android:gravity="center" />
			<EditText 
			    android:id="@+id/task_name_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
    	<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="接收超时" 
			    android:gravity="center" />
			<com.datang.miou.widget.PositiveIntegerEditText 
			    android:id="@+id/timeout_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
			
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="POP3服务器" 
			    android:gravity="center" />
			<EditText 
			    android:id="@+id/mailserver_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="端口" 
			    android:gravity="center" />
			<com.datang.miou.widget.PositiveIntegerEditText 
			    android:id="@+id/port_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="使用SSL" 
			    android:gravity="center" />
			<CheckBox 
			    android:id="@+id/ssl_check_box"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="收件人邮箱" 
			    android:gravity="center" />
			<com.datang.miou.widget.EmailEditText 
			    android:id="@+id/mailbox_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="用户名" 
			    android:gravity="center" />
			<EditText 
			    android:id="@+id/username_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="密码" 
			    android:gravity="center" />
			<EditText 
			    android:id="@+id/password_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>
			
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
