<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:radiogroupprefrence="http://schemas.android.com/apk/res/com.datang.miou"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/fragmentContainer" >
    
   <com.datang.miou.widget.AppTitle
		android:id="@+id/gen_map_title" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
   
	   <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:background="@color/title_background_gray" >
		
		<LinearLayout 
		    android:id="@+id/size_layout"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="文件大小" 
			    android:gravity="center" />
			<com.datang.miou.widget.PositiveIntegerEditText 
			    android:id="@+id/size_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="时间间隔" 
			    android:gravity="center" />
			<com.datang.miou.widget.PositiveIntegerEditText 
			    android:id="@+id/interval_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView 
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="FTP服务器" 
			    android:gravity="center" />
			<LinearLayout 
			    android:id="@+id/server_layout"
		        android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:background="@color/white"
		    	android:layout_weight="1"
		    	android:gravity="center" >
				<TextView 
				    android:id="@+id/server_text_view"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="1"
				    android:gravity="center" 
				    android:layout_margin="5dp" />
				<Button 
				    android:layout_width="20dp"
				    android:layout_height="20dp" 
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:scaleX="0.8"
				    android:scaleY="0.8"
				    android:background="@drawable/detail"/>
			</LinearLayout>
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView 
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="下载文件" 
			    android:gravity="center" />
			<LinearLayout 
			    android:id="@+id/file_layout"
		        android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:background="@color/white"
		    	android:layout_weight="1"
		    	android:gravity="center" >
				<TextView 
				    android:id="@+id/file_text_view"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="1"
				    android:gravity="center" 
				    android:layout_margin="5dp" />
				<Button 
				    android:layout_width="20dp"
				    android:layout_height="20dp" 
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:scaleX="0.8"
				    android:scaleY="0.8"
				    android:background="@drawable/detail"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
