<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:radiogroupprefrence="http://schemas.android.com/apk/res/com.datang.miou"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/fragmentContainer" >

   <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@color/title_background_gray" >
    	<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" >
			<TextView 
			    android:layout_width="0dp"
			    android:layout_height="40dp"
			    android:layout_weight="0.3"
			    android:text="下载模式" 
			    android:gravity="center"/>
			<LinearLayout 
		        android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:background="@color/white"
		    	android:layout_weight="0.7"
		    	android:weightSum="1" 
		    	android:gravity="center" >
				<Button 
				    android:id="@+id/time_button"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="0.4"
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:text="时间"
				    android:background="@color/blue"/>
				<Button 
				    android:id="@+id/size_button"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="0.4"
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:text="大小"
				    android:background="@color/white"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" >
			<TextView 
			    android:layout_width="0dp"
			    android:layout_height="40dp"
			    android:layout_weight="0.3"
			    android:text="FTP服务器" 
			    android:gravity="center"/>
			<LinearLayout 
			    android:id="@+id/server_layout"
		        android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:background="@color/white"
		    	android:layout_weight="0.7"
		    	android:gravity="center" >
				<TextView 
				    android:id="@+id/server_text_view"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="1"
				    android:gravity="center" 
				    android:layout_margin="5dp"/>
				<Button 
				    android:layout_width="30dp"
				    android:layout_height="30dp" 
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:scaleX="0.8"
				    android:scaleY="0.8"
				    android:background="@drawable/arraw_right"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" >
			<TextView 
			    android:layout_width="0dp"
			    android:layout_height="40dp"
			    android:layout_weight="0.3"
			    android:text="下载文件" 
			    android:gravity="center" />
			<LinearLayout 
			    android:id="@+id/file_layout"
		        android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:background="@color/white"
		    	android:layout_weight="0.7"
		    	android:gravity="center" >
				<TextView 
				    android:id="@+id/file_text_view"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="1"
				    android:gravity="center" 
				    android:layout_margin="5dp" />
				<Button 
				    android:layout_width="30dp"
				    android:layout_height="30dp" 
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:scaleX="0.8"
				    android:scaleY="0.8"
				    android:background="@drawable/arraw_right"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
