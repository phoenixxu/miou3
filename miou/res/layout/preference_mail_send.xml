<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/fragmentContainer" >

   <LinearLayout 
       	android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/title_background_gray" >
		
    	<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
	    	<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="发送模式" 
			    android:gravity="center"/>
			<LinearLayout 
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp" >
				<Button 
				    android:id="@+id/time_button"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="0.4"
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:text="时间"
				    android:background="@color/blue"/>
				<Button 
				    android:id="@+id/size_button"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="0.4"
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:text="大小"
				    android:background="@color/white"/>
			</LinearLayout>
			
		</LinearLayout>
		
    	<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="发送超时" 
			    android:gravity="center" />
			<com.datang.miou.widget.PositiveIntegerEditText 
			    android:id="@+id/timeout_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		

		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView 
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="发件人邮箱" 
			    android:gravity="center"/>
			<LinearLayout 
			    android:id="@+id/server_layout"
		        android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:layout_weight="1"
		    	android:gravity="center" >
				<TextView 
				    android:id="@+id/mailbox_text_view"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="1"
				    android:gravity="center" 
				    android:layout_margin="5dp"/>
				<Button 
				    android:layout_width="20dp"
				    android:layout_height="20dp" 
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:scaleX="0.8"
				    android:scaleY="0.8"
				    android:background="@drawable/detail"/>
			</LinearLayout>
		</LinearLayout>
			
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="收件人邮箱" 
			    android:gravity="center"/>
			<com.datang.miou.widget.EmailEditText 
			    android:id="@+id/mailbox_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="邮件主题" 
			    android:gravity="center"/>
			<EditText 
			    android:id="@+id/subject_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>	
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="邮件正文" 
			    android:gravity="center"/>
			<EditText 
			    android:id="@+id/content_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="附件大小" 
			    android:gravity="center"/>
			<com.datang.miou.widget.PositiveIntegerEditText 
			    android:id="@+id/attachment_size_edit_text"
			    android:layout_width="0dp"
		    	android:layout_height="40dp"
		    	android:layout_weight="1"
		    	android:gravity="center"
			    android:layout_marginRight="35dp"/>
			
		</LinearLayout>
		
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="@color/white"
	    	android:layout_marginBottom="0.5dp" 
	    	android:gravity="center" >
			<TextView 
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:text="下载文件" 
			    android:gravity="center" />
			<LinearLayout 
			    android:id="@+id/file_layout"
		        android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:background="@color/white"
		    	android:layout_weight="1"
		    	android:gravity="center" >
				<TextView 
				    android:id="@+id/file_text_view"
				    android:layout_width="0dp"
				    android:layout_height="30dp" 
				    android:layout_weight="1"
				    android:gravity="center" 
				    android:layout_margin="5dp" />
				<Button 
				    android:layout_width="20dp"
				    android:layout_height="20dp" 
				    android:gravity="center" 
				    android:layout_margin="5dp"
				    android:scaleX="0.8"
				    android:scaleY="0.8"
				    android:background="@drawable/detail"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
