<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_gray"
    android:orientation="vertical"
    android:paddingTop="15dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="测试开始时间" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>

        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="测试结束时间" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>


        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="所在测试任务名称" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>

        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="经度" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>


        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="纬度" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>

        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="打开网页地址" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>


        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="终端TAC" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>

        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="打开网页大小" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>


        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="耗费时间" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>
        <TextView
            android:layout_height="1dp"
            android:background="@color/menu_gray" />

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="速率" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp" />

        </TableRow>
    </TableLayout>


</ScrollView>