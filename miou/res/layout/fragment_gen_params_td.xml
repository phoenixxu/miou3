<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
        android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:id="@+id/cell_info_layout" 
  		android:orientation="vertical" >     
    
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="@string/cell_info"
	        android:id="@+id/cell_info_textView"
	        android:gravity="center"
	        android:background="#C8C8C8" >
	        
	    </TextView>	
	    <TableLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:id="@+id/serving_cell_info_table"
	        android:stretchColumns="*" 
	        android:layout_margin="10dp"
	        android:background="@color/menu_border_gray">
	        <TableRow 
	            android:gravity="center"
	            android:background="@color/white"
	            android:layout_marginTop="0.5dp" 
	            android:layout_marginLeft="0.5dp"
	            android:layout_marginRight="0.5dp"
	            android:layout_marginBottom="0.5dp" >
	            <TextView 
	                android:text="Serving Cell Info"
	                android:gravity="center"></TextView>
	        </TableRow>
	        
	    </TableLayout>

	    <TableLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:id="@+id/neighbor_cell_info_table"
	        android:stretchColumns="*" 
	        android:layout_margin="10dp"
	        android:background="@color/menu_border_gray" >
	    <TableRow 
	            android:gravity="center"
	            android:background="@color/white"
	            android:layout_marginTop="0.5dp" 
	            android:layout_marginLeft="0.5dp"
	            android:layout_marginRight="0.5dp"
	            android:layout_marginBottom="0.5dp" >
	            <TextView 
	                android:text="Neighbor Cell Info"
	                android:gravity="center"></TextView>
	        </TableRow>
	    </TableLayout>
    </LinearLayout>
</LinearLayout>
