<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal" >
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textSize="10dp"
            android:scaleX="0.8" 
            android:scaleY="0.8" >
            
        </TextView>
        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textSize="10dp"
            android:scaleX="0.8" 
            android:scaleY="0.8" >
            
        </TextView>
        <TextView
            android:id="@+id/rsrp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="10dp"
            android:scaleX="0.8" 
            android:scaleY="0.8" >
            
        </TextView>
        <TextView
            android:id="@+id/sinr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="10dp"
            android:scaleX="0.8" 
            android:scaleY="0.8" >
            
        </TextView>
        <TextView
            android:id="@+id/ftp_dl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textSize="10dp"
            android:scaleX="0.8" 
            android:scaleY="0.8" >
            
        </TextView>
        <TextView
            android:id="@+id/ftp_ul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textSize="10dp"
            android:scaleX="0.8" 
            android:scaleY="0.8" >
            
        </TextView>
        <TextView
            android:id="@+id/ping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="10dp"
            android:scaleX="0.8" 
            android:scaleY="0.8" >
            
        </TextView>
        <TextView
            android:id="@+id/csfb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/list_header_csfb" 
            android:gravity="center"
            android:textSize="10dp"
            android:scaleX="0.8" 
            android:scaleY="0.8" >
            
        </TextView>

</LinearLayout>
